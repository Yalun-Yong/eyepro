            <Label text="Set Mission">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <VBox prefHeight="129.0" prefWidth="370.0">
               <children>
                  <Label text="Set Mission Date    " />
                  <DatePicker fx:id="datePickerMission" promptText="Chose Mission Date" />
